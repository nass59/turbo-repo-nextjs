{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "CLERK_SECRET_KEY",
    "GITHUB_ID",
    "GITHUB_SECRET",
    "GITHUB_ACCESS_TOKEN",
    "MONGODB_DATABASE",
    "MONGODB_URI",
    "PREVIEW_URL_SECRET",
    "SPACE_ID"
  ],
  "globalDependencies": [".env", "**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {
      "persistent": true
    },
    "typecheck": {
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:turbo": {
      "cache": false,
      "persistent": true
    }
  }
}
